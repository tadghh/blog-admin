{
	"$schema": "https://schema.tauri.app/config/2",
	"productName": "blog-admin",
	"version": "0.1.0",
	"identifier": "com.blog-admin.app",
	"build": {
		"beforeDevCommand": "npm run dev",
		"devUrl": "http://localhost:1420",
		"beforeBuildCommand": "npm run build",
		"frontendDist": "../dist"
	},
	"app": {
		"withGlobalTauri": true,
		"windows": [
			{
				"title": "blog-admin",
				"width": 800,
				"height": 600
			}
		],
		"security": {
			"csp": {
				"default-src": "'self'",
				"img-src": "'self' asset: http://asset.localhost https: data: file:",
				"style-src": "'self' 'unsafe-inline'",
				"script-src": "'self' 'unsafe-eval'",
				"connect-src": "'self'"
			},
			"capabilities": [
				{
					"windows": ["main"],
					"identifier": "mfd",
					"permissions": [
						"core:default",
						"dialog:allow-open",
						"dialog:allow-ask",
						"dialog:allow-message",
						"dialog:default",
						"fs:allow-read",
						"fs:read-all",
						"fs:read-dirs",
						"fs:default",
						{
							"identifier": "fs:allow-write-file",
							"allow": [
								{
									"path": "**"
								}
							]
						},
						{
							"identifier": "fs:scope",
							"allow": [
								{
									"path": "**"
								}
							]
						}
					],
					"platforms": ["macOS", "windows"]
				}
			],
			"assetProtocol": {
				"enable": true,
				"scope": ["**"]
			}
		}
	},
	"bundle": {
		"active": true,
		"targets": "all",
		"icon": [
			"icons/32x32.png",
			"icons/128x128.png",
			"icons/128x128@2x.png",
			"icons/icon.icns",
			"icons/icon.ico"
		]
	}
}
